{% extends 'base.html.twig' %}

{% block body %}
    <h1>Player</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Playername</th>
                <td>{{ player.playerName }}</td>
            </tr>
            <tr>
                <th>Playersurname</th>
                <td>{{ player.playerSurname }}</td>
            </tr>
            <tr>
                <th>Shootgoal</th>
                <td>{{ player.shootGoal }}</td>
            </tr>
            <tr>
                <th>Yellowcard</th>
                <td>{{ player.yellowCard }}</td>
            </tr>
            <tr>
                <th>Redcard</th>
                <td>{{ player.redCard }}</td>
            </tr>
            <tr>
                <th>Timegame</th>
                <td>{{ player.timeGame }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ player.info }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('player_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('player_edit', { 'id': player.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
