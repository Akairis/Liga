{% extends 'base.html.twig' %}

{% block body %}
    <h1>Team</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Teamname</th>
                <td>{{ team.teamName }}</td>
            </tr>
            <tr>
                <th>Point</th>
                <td>{{ team.point }}</td>
            </tr>
            <tr>
                <th>Shootgoal</th>
                <td>{{ team.shootGoal }}</td>
            </tr>
            <tr>
                <th>Losegoal</th>
                <td>{{ team.loseGoal }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>
                    <img src="{{ asset('/uploads/logos/') ~ team.img}}">
                </td>
            </tr>
            <tr>
                <th>Favourite</th>
                <td>{% if team.favourite %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('team_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('team_edit', { 'id': team.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
